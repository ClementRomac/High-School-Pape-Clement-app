        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:contextClickable="true"
            android:id="@+id/accueil_rl_lycee">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/accueil_lycee"
                android:src="@drawable/lycee"
                android:layout_alignParentBottom="true"
                android:adjustViewBounds="true"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_alignParentBottom="true">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/accueil_h1_lycee"
                    android:layout_weight="2"
                    android:textColor="@color/main_font"
                    android:singleLine="true"
                    android:text="@string/accueil_h1_lycee"
                    android:textAlignment="center"
                    android:background="@color/high_school_primary"
                    android:elegantTextHeight="false"
                    android:gravity="center_vertical" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/accueil_h2_lycee"
                    android:id="@+id/accueil_h2_lycee"
                    android:textColor="@color/main_font"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:paddingLeft="10dp"
                    android:background="@color/color_main_lyceeTransparency"
                    android:gravity="center_vertical" />
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:contextClickable="true"
            android:id="@+id/accueil_rl_eleve">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/accueil_eleve"
                android:src="@drawable/eleve"
                android:layout_alignParentBottom="true"
                android:adjustViewBounds="true"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_alignParentBottom="true">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/accueil_h1_eleve"
                    android:id="@+id/accueil_h1_eleve"
                    android:layout_weight="2"
                    android:textColor="@color/main_font"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:background="@color/students_primary"
                    android:gravity="center_vertical" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/accueil_h2_eleve"
                    android:id="@+id/accueil_h2_eleve"
                    android:textColor="@color/main_font"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:paddingLeft="10dp"
                    android:background="@color/color_main_eleveTransparency"
                    android:gravity="center_vertical"/>
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:contextClickable="true"
            android:id="@+id/accueil_rl_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/accueil_parent"
                android:src="@drawable/parents"
                android:layout_alignParentBottom="true"
                android:adjustViewBounds="true"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_alignParentBottom="true">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/accueil_h1_parent"
                    android:id="@+id/accueil_h1_parent"
                    android:layout_weight="2"
                    android:textColor="@color/main_font"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:background="@color/parents_primary"
                    android:gravity="center_vertical" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/accueil_h2_parent"
                    android:id="@+id/accueil_h2_parent"
                    android:textColor="@color/main_font"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:paddingLeft="10dp"
                    android:background="@color/color_main_parentsTransparency"
                    android:gravity="center_vertical"/>
            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>
</ScrollView>
